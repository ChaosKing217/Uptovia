# Server Configuration
NODE_ENV=production
PORT=3000
APP_URL=http://localhost:3000

# Database Configuration
# For Docker: Use service name 'postgres' as host
# For manual installation: Use 'localhost'
POSTGRES_USER=uptimeuser
POSTGRES_PASSWORD=changeme123
POSTGRES_DB=uptime_monitor
DATABASE_URL=postgresql://uptimeuser:changeme123@postgres:5432/uptime_monitor

# JWT Configuration
JWT_SECRET=change_this_to_a_random_secret_key

# Email Configuration (SMTP)
# Leave empty to disable email functionality
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=Uptime Monitor <noreply@yourmonitor.com>

# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
# For other providers: Use regular SMTP credentials
# Common SMTP Ports:
# - 587: TLS/STARTTLS (recommended)
# - 465: SSL
# - 25: Non-encrypted (not recommended)

# Apple Push Notifications (APNs) Configuration
# Leave empty if you don't need push notifications
APNS_KEY_PATH=/app/certs/AuthKey.p8
APNS_KEY_ID=your_key_id_here
APNS_TEAM_ID=your_team_id_here
APNS_BUNDLE_ID=com.yourcompany.uptime

# Optional: OIDC Configuration (for future implementation)
# OIDC_ENABLED=false
# OIDC_ISSUER=https://your-authentik-instance.com/application/o/your-app/
# OIDC_CLIENT_ID=your_client_id
# OIDC_CLIENT_SECRET=your_client_secret
